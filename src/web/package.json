{
  "name": "hotspot-web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --open",
    "prepare": "husky install",
    "lint": "eslint src/**/*.{ts,vue}",
    "lint:fix": "eslint --fix src/**/*.{ts,vue}",
    "format": "prettier --write src/**/*.{js,ts,vue} *.{js,ts,json,md}",
    "format:check": "prettier --check src/**/*.{js,ts,vue} *.{js,ts,json,md}"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "slugify": "^1.6.6",
    "validator": "^13.15.15",
    "vite-plugin-vuetify": "^2.1.2",
    "vue": "^3.5.0",
    "vue-router": "^4.4.0",
    "vuetify": "^3.10.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "typescript": "^5.5.0",
    "vite": "^6.0.0",
    "vue-tsc": "^3.0.6"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
